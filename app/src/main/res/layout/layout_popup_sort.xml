<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvPriceAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Giá: Thấp đến Cao"
            android:textColor="#333333"
            android:textSize="14sp"
            app:drawableStartCompat="@android:drawable/arrow_up_float"
            app:drawableTint="#1976D2" />

        <TextView
            android:id="@+id/tvPriceDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Giá: Cao đến Thấp"
            android:textColor="#333333"
            android:textSize="14sp"
            app:drawableStartCompat="@android:drawable/arrow_down_float"
            app:drawableTint="#D32F2F" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/tvNameAz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Tên: A -> Z"
            android:textColor="#333333"
            android:textSize="14sp"
            app:drawableStartCompat="@android:drawable/ic_menu_sort_alphabetically"
            app:drawableTint="#000000" />

    </LinearLayout>
</androidx.cardview.widget.CardView>